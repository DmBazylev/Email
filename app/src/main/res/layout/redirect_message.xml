<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/button_send_message_to_redirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отправить"
        android:layout_margin="10dp"
        android:background="@drawable/my_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/enter_email_to_redirect"/>
    <EditText
        android:id="@+id/enter_email_to_redirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введите адрес почты для перенаправления"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_send_message_to_redirect"/>



</androidx.constraintlayout.widget.ConstraintLayout>