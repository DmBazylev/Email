<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.email">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Email">
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity android:name=".PasswordActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Akuznecov2023Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity android:name=".Bazilev_lawActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity android:name=".MessageActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity android:name=".Send_messageActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity android:name=".Redirect_messageActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

    </application>

</manifest>